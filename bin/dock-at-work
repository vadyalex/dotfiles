#!/bin/sh

xrandr --output eDP-1 --primary --mode 1920x1080 --pos 0x768 --rotate normal --output DP-1-2 --mode 2560x1440 --pos 3360x0 --rotate right --output HDMI-2 --off --output HDMI-1 --off --output DP-1 --off --output DP-1-3 --off --output DP-2 --off --output DP-1-1 --mode 2560x1440 --pos 1920x0 --rotate left \
	&& sleep 2 \
	&& go-paint-my-desktop \
	&& notify-send 'DOCKING COMPLETE' 'ðŸ›¬ Welcome to work'
