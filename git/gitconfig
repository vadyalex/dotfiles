[user]
	email = vadyalex@gmail.com
	name = Vlad
[push]
	default = current
[pull]
	ff = only
[alias]
	graph   = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%ad%Creset %C(white)%s%Creset %C(bold yellow)%d%Creset %C(bold blue)<%an>%Creset' --date=short
	l       = log
	st      = status
	a       = add
	c       = commit
	fixup   = commit --amend --no-edit
	p       = pull --autostash
	pr      = pull --rebase --autostash
	r       = rebase --autostash
	ri      = rebase --autostash --interactive --root
	pu      = push
	puf     = push --force
	d       = diff
	ffp     = fixup && puf
[core]
	autocrlf = input
